<div class='well bs-component'>

    
    <div class="row">
   	<label class="control-label col-lg-1"></label>
      <div class="col-lg-3">
      	<legend><h1><%=@recipe.name%></h1></legend>
		  <ul class='list-unstyled recipe-show-ingredient-ul'>
			<% @recipe.ingredients.each do |g|%>
				<li><%= g.name.split.map(&:capitalize)*' ' %></li>
			<% end %>
			</ul>
			<br><br><br>


   		<div class="form-group">
            <button type='button' class="btn btn-info btn-small" data-toggle="modal" href="#shoppinglist">Shopping List</button>
            <div class="modal" id="shoppinglist">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                    <h4 class="modal-title">Shopping List</h4>
                  </div>
                  <div class="modal-body">
                  	<ul>
                  	<% @shopping.each do |s| %>
                  		
                  		<li><%= s.name.split.map(&:capitalize)*' ' %></li>
                  		

                  	<% end %>
                  	</ul>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>

    	</div>

	  </div>


      <div class="col-lg-8">
		<%= image_tag @recipe.image_url , :class => "img-responsive", style:"float:right;"%>
	  </div>



	</div> 

	<br>

	<div class='row'>
		<label class="control-label col-sm-1"></label>
		<div class="form-group">
			Edit this recipe <%= link_to 'here', edit_recipe_path %>.
		</div>
	</div>

	<div class='row'>
		<label class="control-label col-sm-1"></label>
		<div class="form-group">
			<%= link_to "Create a new Recipe", "/recipes/new"%>
		</div>
	</div>
	<div class='row'>
		<label class="control-label col-sm-1"></label>
		<div class="form-group">
			<%= link_to "Create a new Ingredient", "/recipes/new"%>
		</div>
	</div>


	<div class='row'>
		<label class="control-label col-sm-1"></label>
	<% if @recipe.ext_url%>
		<div class="form-group">
			<button class="btn btn-info" type="button button-control" onclick="window.open('<%=@recipe.ext_url%>')">Show Directions on External Site</button>	
	    </div>
	<%else%>
		<div class="form-group">
			Know another source for this recipe? Add a link by clicking <%= link_to 'here', edit_recipe_path %>.
		</div>
	<% end %>
	</div>

<br><br>

    <div class="row">
   	<label class="control-label col-lg-2"></label>
      <div class="col-lg-6">
      	<legend><h1>Directions</h1></legend>
			<% if @recipe.directions%>
				<%= simple_format(@recipe.directions) %>
			<%else%>
				Add some <%= link_to 'here', edit_recipe_path %>.
			<% end %>
  	  </div>
  	</div>



</div>